<!--miniprogram/pages/component/scroll-view/scroll-view.wxml-->
<view style="padding: 0 10px">
  <view>
    <text>1. 横向滚动：</text>
    <scroll-view scroll-x scroll-with-animation scroll-into-view="demo2" class="view" style="width: 100%; height: 200rpx">
      <view id="demo1" class="item bc_red">1</view>
      <view id="demo2" class="item bc_blue">2</view>
      <view id="demo3" class="item bc_green">3</view>
      <view id="demo4" class="item bc_yellow">4</view>
    </scroll-view>
  </view>
  <view>
    <text>2. 纵向滚动：</text>
    <scroll-view scroll-y scroll-with-animation scroll-into-view="demo3" style="width: 100%; height: 200rpx">
      <view id="demo1" class="item bc_red">1</view>
      <view id="demo2" class="item bc_blue">2</view>
      <view id="demo3" class="item bc_green">3</view>
      <view id="demo4" class="item bc_yellow">4</view>
    </scroll-view>
  </view>
  <view>
    <text>3. 双向滚动：</text>
    <scroll-view scroll-x scroll-y scroll-into-view="demo4" style="width: 100%; height: 200rpx">
      <view class="view" style="width: 100%; height: 200rpx">
        <view id="demo1" class="item bc_red">1</view>
        <view id="demo2" class="item bc_blue">2</view>
      </view>
      <view class="view" style="width: 100%; height: 200rpx">
        <view id="demo3" class="item bc_green">3</view>
        <view id="demo4" class="item bc_yellow">4</view>
      </view>
    </scroll-view>
  </view>
</view>