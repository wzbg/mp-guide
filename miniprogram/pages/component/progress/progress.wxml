<!--miniprogram/pages/component/progress/progress.wxml-->
<view style="padding: 0 10px">
  <view>
    <text>系统进度条：</text>
    <progress percent="{{percentValue}}" show-info />
    <progress percent="{{percentValue}}" show-info border-radius="10" font-size="32" stroke-width="12" activeColor="blue" backgroundColor="gray" active active-mode="forwards" duration="90" bindactiveend="" />
    <button bindtap="onTapReloadBtn">重置</button>
  </view>
  <view>
    <text>环形进度条：</text>
    <circle-progress percent="{{percentValue}}" />
  </view>
</view>