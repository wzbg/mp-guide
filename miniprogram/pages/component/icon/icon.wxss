/* miniprogram/pages/component/icon/icon.wxss */
.sprite-icon {
  display: block;
  width: 100px;
  height: 115px;
  background: url("http://bbs.itsource.cn/data/attachment/forum/201706/30/163249m9lmyl6z6cui4mci.png") -100px -230px;
}

.icon-close {
  display: inline-block;
  width: 17px;
  height: 2px;
  background: green;
  transform: rotate(45deg);
}
.icon-close::after {
  content: '';
  display: block;
  width: 17px;
  height: 2px;
  background: red;
  transform: rotate(90deg);
}

