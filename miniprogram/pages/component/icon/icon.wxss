  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-font-smoothing: grayscale;
}
.icon-dumbbell::before {
  content: "\e62a";
}
.icon-timer::before {
  content: "\e621";
  color: red;
  font-size: 20px;
}

